@model IEnumerable<TravelBlog.Models.People>

@{
    ViewData["Title"] = "People";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>People</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var listPeople in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelPeople => listPeople.Description)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listPeople.PeopleId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listPeople.PeopleId }) |
                @Html.ActionLink("Details", "Details", new { id = listPeople.PeopleId})
            </td>
        </tr>
    }
</table>
<p>@Html.ActionLink("Add new person", "Create")</p>
